<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linier">

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tim1"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/textpoinvi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nol"
                android:textSize="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
            <Button
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"
                android:id="@+id/vi3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tambah3"/>
            <Button
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"
                android:id="@+id/vi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tambah2"/>
            <Button
                android:background="@color/colorAccent"
                android:id="@+id/vifree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/free"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tim2"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/textpoinaul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nol"
                android:textSize="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
            <Button
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"
                android:id="@+id/ar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tambah3"
                />
            <Button
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"
                android:id="@+id/ar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tambah2"/>
            <Button
                android:background="@color/colorAccent"
                android:id="@+id/arfree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/free"/>
        </LinearLayout>

    </LinearLayout>
<Button
    android:id="@+id/btn_reset"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="25dp"
    android:text="Reset"
    android:background="@color/warnaoren"/>

</RelativeLayout>

